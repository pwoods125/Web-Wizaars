<div>
    {{>primary}}
</div>
<div>
    <a class="waves-effect waves-light btn-large" href="/addgame">Add A Game to your Library</a>
</div>
<div class="gamelibrary-container">
    <div class="card-header col-md-12 text-center #eceff1 blue-grey-text text-lighten-5">
        <h2 class="center-align">
            Your Game Library
        </h2>
    </div>
    {{#each gamesLogged as |game|}}
    <div class="center-align" class="row">
        <div class="col s12 m6">
            <div class="card #6a1b9a purple darken-3">
                <div class="card-content white-text">
                    <span class="card-title">{{ this.id }}. {{this.game_name}}</span>
                    <br />
                    Console: {{this.console}}
                    Genre: {{this.genre}}
                    <br />
                    <p>Comments: {{this.game_comments}}</p>
                </div>
                <div class="card-action #eceff1 blue-grey-text text-lighten-5">
                    {{#if this.completed}} <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                        fill="chartreuse" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                        <path
                            d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                    </svg> Completed {{else}} {{/if}}
                    {{#if this.favorite}} <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="gold"
                        class="bi bi-star-fill" viewBox="0 0 16 16">
                        <path
                            d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                    </svg> Favorite {{else}} {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}