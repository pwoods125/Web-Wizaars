<div class="profile-container">
  <h2>
    Setup your profile!
  </h2>
  <form class="profile-form">
    <label for="profile_name">
      First Name
    </label>
    <br />
    <input id="first_name" name="first_name" rows="2" cols="30">
    {{firstname}}
    </input>
    <br />
    <label for="profile_name">
      Last Name
    </label>
    <br />
    <input id="last_name" name="last_name" rows="2" cols="30">
    {{lastname}}
    </input>
    <br />
    <label for="about_me">
      About Me:
    </label>
    <br />
    <input id="about_me" name="about_me" rows="5" cols="30">
    {{aboutme}}
    </input>
    <br />
    <br />
    <label for="psn_name">
      PSN Username:
    </label>
    <br />
    <input id="psn_name" name="psn_name" rows="2" cols="30">
    {{usernamepsn}}
    </input>
    <br />
    <label for="xbox_name">
      XBOX Username:
    </label>
    <br />
    <input id="xbox_name" name="xbox_name" rows="2" cols="30">
    {{usernamexbox}}
    </input>
    <br />
    <label for="steam_name">
      Steam Username:
    </label>
    <br />
    <input id="steam_name" name="steam_name" rows="2" cols="30">
    {{usernamesteam}}
    </input>
    <br />
    <label for="nintendo_name">
      Nintendo Username:
    </label>
    <br />
    <input id="nintendo_name" name="nintendo_name" rows="2" cols="30">
    {{usernamenintendo}}
    </input>
    <br />
    <button type="submit" value="Submit">
      Submit
    </button>
  </form>
</div>
</div>

<script src="/js/profile.js"></script>